{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "bazel-poc": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "nw",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "./dist/bazel-poc",
            "index": "./src/index.base.html",
            "main": "./src/main.dev.ts",
            "polyfills": "./src/polyfills.ts",
            "tsConfig": "./tsconfig.app.json",
            "aot": true,
            "commonChunk": false,
            "namedChunks": true,
            "preserveSymlinks": true,
            "buildOptimizer": false,
            "sourceMap": {
              "scripts": true,
              "styles": true,
              "hidden": false,
              "vendor": true
            },
            "optimization": {
              "scripts": false,
              "styles": false,
              "fonts": false
            },
            "assets": [
              "src/favicon.ico",
              "src/assets"        
            ],
            "styles": ["src/styles.scss"],
            "vendorChunk": true,
            "allowedCommonJsDependencies": []
          },
          "configurations": {
            "generation": {
              "outputPath": "dist/gen",
              "sourceMap": false,
              "watch": false
            },
            "development": {
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false
            },
            "localEnv": {
              "fileReplacements": [
                {
                  "replace": "./src/environments/environment.ts",
                  "with": "./src/environments/environment.local.ts"
                }
              ]
            },
            "e2e": {
              "progress": false,
              "sourceMap": false
            },
            "e2eDebug": {
              "progress": false,
              "sourceMap": {
                "styles": true,
                "scripts": true,
                "vendor": true
              }
            },
            "genAssets": {
              "namedChunks": true,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": false,
              "aot": true,
              "fileReplacements": [
                {
                  "replace": "./src/environments/environment.ts",
                  "with": "./src/environments/environment.testgen.ts"
                }
              ]
            },
            "serve": {
              "tsConfig": "./tsconfig.serve.json"
            },
            "production": {
              "customWebpackConfig": {
                "path": "./webpack-prod-build.config.ts",
                "mergeStrategies": {
                  "module.rules": "append"
                }
              },
              "fileReplacements": [
                {
                  "replace": "./src/environments/environment.ts",
                  "with": "./src/environments/environment.prod.ts"
                }
              ],
              "main": "./src/main.prod.ts",
              "aot": true,
              "outputHashing": "all",
              "namedChunks": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": false,
              "sourceMap": false
            },
            "prodRemoteGen": {
              "customWebpackConfig": {
                "path": "./webpack-prod-build.config.ts",
                "mergeStrategies": {
                  "module.rules": "merge"
                }
              },
              "fileReplacements": [
                {
                  "replace": "./src/environments/environment.ts",
                  "with": "./src/environments/environment.remotegen.ts"
                }
              ],
              "aot": true,
              "namedChunks": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": false,
              "sourceMap": false
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "bazel-poc:build:production"
            },
            "development": {
              "browserTarget": "bazel-poc:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "bazel-poc:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": ["src/styles.scss"],
            "scripts": []
          }
        }
      }
    }
  },
  "defaultProject": "bazel-poc"
}
